<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ch.ubervison.mlc">

    <application
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@mipmap/mlc_launcher"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name="ch.ubervison.mlc.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ch.ubervison.mlc.CreateCharacterActivity"
                  android:label="@string/new_char_screen_label">"
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="ch.ubervison.mlc.MainActivity" />
        </activity>
    </application>

</manifest>
